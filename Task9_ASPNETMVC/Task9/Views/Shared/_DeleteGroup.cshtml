@model GroupUpdateDto
@{
    ViewBag.Title = $"Delete {@ViewBag.EntityName}";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
    </style>
</head>
<body>
    <h1>Delete @ViewBag.EntityName</h1>
    <form action="/Group/DeleteGroup" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="courseId" value="@Model.CourseId" />
        <p>Are you sure you want to delete the @ViewBag.EntityName <strong>@Model.Name</strong>?</p>
        <input type="submit" value="Delete" />
    </form>
</body>
</html>
